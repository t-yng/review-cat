{
  "name": "main",
  "license": "MIT",
  "version": "1.3.0",
  "main": "./dist/app.js",
  "scripts": {
    "dev": "yarn build:dev && electron --require dotenv/config ./dist/app.js",
    "build": "yarn clean && NODE_ENV=production node esbuild.js && yarn copy",
    "build:dev": "yarn clean && NODE_ENV=development node esbuild.js && yarn copy",
    "build:test": "yarn clean && NODE_ENV=test node esbuild.js && yarn copy",
    "package": "node build.js",
    "clean": "rimraf app & rimraf dist",
    "copy": "cpx 'assets/images/**' dist/assets/images",
    "lint": "eslint",
    "lint:all": "yarn lint . --cache --ext .js,.ts,.tsx",
    "format": "prettier --write",
    "format:all": "yarn format \"**/*.{js,ts,tsx,json}\"",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "yarn format"
    ],
    "*.{js,ts,tsx}": [
      "yarn lint"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.4.10",
    "@swc/core": "^1.3.24",
    "axios": "1.3.5",
    "cross-fetch": "^3.1.4",
    "menubar": "^9.1.0",
    "web": "*"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.5.11",
    "electron": "22.0.0",
    "electron-builder": "23.6.0",
    "esbuild": "^0.16.16"
  }
}
