{
  "name": "review-cat",
  "license": "MIT",
  "version": "1.2.0",
  "private": true,
  "workspaces": ["packages/*"],
  "main": "./dist/app.js",
  "scripts": {
    "dev": "yarn workspace web dev & yarn workspace main dev",
    "build": "yarn workspaces run build && yarn workspace main package",
    "prepare": "husky install",
    "lint": "eslint",
    "lint:all": "yarn workspace web lint:all && yarn lint ./electron --cache --ext .js,.ts,.tsx",
    "format": "prettier --write",
    "format:all": "yarn format \"**/*.{js,ts,tsx,json}\"",
    "test": "yarn workspaces run test",
    "type-check": "yarn type-check:renderer && yarn type-check:electron",
    "type-check:electron": "tsc -p tsconfig.electron.json --noEmit"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "yarn format"
    ],
    "*.{js,ts,tsx}": [
      "yarn lint"
    ]
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "esbuild": "^0.16.13"
  }
}
