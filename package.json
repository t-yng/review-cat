{
  "name": "review-cat",
  "license": "MIT",
  "version": "1.2.0",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "yarn workspace web dev & yarn workspace main dev",
    "build": "yarn workspaces run build",
    "package": "yarn workspace main package",
    "prepare": "husky install",
    "lint": "eslint",
    "lint:all": "yarn workspaces run lint:all",
    "format": "prettier --write",
    "format:all": "yarn workspaces run format:all",
    "test": "yarn workspaces run test",
    "type-check": "yarn workspaces run type-check"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "yarn format"
    ],
    "*.{js,ts,tsx}": [
      "yarn lint"
    ]
  },
  "devDependencies": {
    "esbuild": "^0.16.13"
  }
}
